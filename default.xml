<?xml version="1.0" encoding="UTF-8"?>
<manifest>
 
  <!-- This is the list of repos we're nabbing things from here... -->
  <remote  name="github"
           fetch="http://github.com" />

  <remote  name="yocto"
	   fetch="http://git.yoctoproject.org" />

  <remote  name="openembedded"
     	   fetch="git://git.openembedded.org/" />

  <!-- Unless overridden by the project line-item, we're grabbing from 
       the head of the master branch for any given git repo for this
       project... -->
  <default revision="master"/>

 <!-- Everything here is based off of krogoth as a branch- because of the latest and greatest
      as overlaid in meta-rpi (i.e. 4.4 kernel, etc...) -->
 <project name="git/poky" remote="yocto" revision="krogoth" path="." />
 <project name="meta-openembedded" remote="openembedded" revision="krogoth" path="meta-openembedded" /> 
 
 <!-- The RaspberryPi Metadata layer happens to not have a krogoth version, but "master" counts... -->
  <project name="git/meta-raspberrypi" remote="yocto" path="meta-raspberrypi" />

 <!-- We're currently using the latest and greatest on Node.js...so, bring in the official meta-nodejs layer -->
 <project name="imyller/meta-nodejs" remote="github" path="meta-nodejs" />
 
 <!-- As a resource, we're bringing in the OpenWRT layer, which brings in all the best of breed 
      from there into OE...and since we're playing in this space...bring it in! -->
 <project name="kraj/meta-openwrt" remote="github" path="meta-openwrt" /> 
 
 <!-- Pull in my OE pet-projects recipes layer... -->
 <project name="madscientist42/meta-pha" remote="github" path="meta-pha"/>

 <!-- Finally, pull in our build config... -->
 <project name="madscientist42/oe_build_config" remote="github" path="build"/>

</manifest>


