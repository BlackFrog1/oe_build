<?xml version="1.0" encoding="UTF-8"?>
<manifest>
 
  <!-- This is the list of repos we're nabbing things from here... -->
  <remote  name="github"
           fetch="http://github.com" />

  <remote  name="yocto"
	   fetch="http://git.yoctoproject.org" />

  <remote  name="openembedded"
     	   fetch="git://git.openembedded.org/" />

  <!-- Unless overridden by the project line-item, we're grabbing from 
       the head of the rocko branch for any given git repo for this
       project... -->
  <default revision="rocko"/>

 <!-- Everything here is based off of rocko as a branch where possible and practical
      mainly because they don't break things as often in a "stable" branch -->
 <project name="git/poky" remote="yocto" path="." />
 <project name="meta-openembedded" remote="openembedded" path="meta-openembedded" />
 <project name="mem/oe-meta-go" remote="github" path="oe-meta-go" />
 
 <!-- The RaspberryPi Metadata layer -->
 <project name="git/meta-raspberrypi" remote="yocto" path="meta-raspberrypi" />

 <!-- The meta-sunxi layer to bring in Allwinner SoC support for Orange/Bananna/NanoPi support -->
<project name="linux-sunxi/meta-sunxi" remote="github" path="meta-sunxi" />

 <!-- Pull in the embedded device network/local forensics tools layer -->
 <project name="git/meta-security" remote="yocto" path="meta-security" />
   
 <!-- Pull in a OE metadata layer of mine...the out of kernel buld Realtek USB Wifi support -->
 <project name="madscientist42/meta-rtlwifi" remote="github" revision="master" path="meta-rtlwifi" />

 <!-- Pull in my OE pet-projects recipes layer...  We don't have anything other than master for this. -->
 <project name="madscientist42/meta-pha" remote="github" revision="master" path="meta-pha"/>

 <!-- Finally, pull in our build config...  We don't have anything other than master for this. -->
 <project name="madscientist42/oe_build_config" remote="github" revision="master" path="build"/>

</manifest>


