<?xml version="1.0" encoding="UTF-8"?>
<manifest>
 
  <!-- This is the list of repos we're nabbing things from here... -->
  <remote  name="github"
           fetch="http://github.com" />

  <remote  name="yocto"
	   fetch="http://git.yoctoproject.org" />

  <remote  name="openembedded"
     	   fetch="git://git.openembedded.org/" />

  <!-- Unless overridden by the project line-item, we're grabbing from 
       the head of the master branch for any given git repo for this
       project... -->
  <default revision="master"/>

 <!-- Yocto/Poky core pieces -->
 <project name="git/poky" remote="yocto" revision="sumo" path="." />
 <project name="meta-openembedded" remote="openembedded" revision="sumo" path="meta-openembedded" />

 <!-- Golang support for building Go apps like the production test app -->
 <project name="madisongh/meta-golang" remote="github" revision="rocko" path="meta-golang" />
 
 <!-- The RaspberryPi Metadata layer, to let you build for a test target -->
 <project name="git/meta-raspberrypi" remote="yocto" revision="rocko" path="meta-raspberrypi" />

 <!-- The meta-sunxi layer to bring in (baseline...) Allwinner SoC support for Orange/Bananna/NanoPi support -->
<project name="linux-sunxi/meta-sunxi" remote="github" path="meta-sunxi" />

 <!-- Pull in the embedded device network/local forensics tools layer -->
 <project name="git/meta-security" remote="yocto" path="meta-security" />
   
 <!-- Pull in a OE metadata layer from PHA Technologies...the out of kernel buld Realtek USB Wifi support -->
 <project name="madscientist42/meta-rtlwifi" remote="github" path="meta-rtlwifi" />

 <!-- Pull in a OE metadata layer from PHA Technologies...the BSP and enhancements for the NanoPI Neo2/Neo-Plus2 boards -->
 <project name="madscientist42/meta-pha" remote="github" path="meta-pha"/>

 <!-- Pull in our build config... -->
 <project name="madscientist42/oe_build_config" remote="github" path="build"/>

</manifest>


